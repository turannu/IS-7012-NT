@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body style="font-family:Cambria; color:black;">
</body>
<style>
    .h1.h2 {
        color: brown;
        font-size: x-large;
    }
    /* Fullscreen carousel */
    .carousel-item img {
        height: 350px; /* Reduced height for carousel images */
        object-fit: cover; /* Maintain aspect ratio */
    }
    /* Container for the menu */
    .menu-container {
        text-align: center;
        margin: 20px 0;
    }
    /* Title of the menu */
    .menu-title {
        font-size: 2em;
        color: green;
        margin-bottom: 20px;
    }
    /* Flex container for menu items */
    .menu-items {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
    }

    /* Individual menu item */
    .menu-item {
        margin: 10px;
        text-align: center;
    }
        /* Icon for each menu item */
        .menu-item img {
            width: 50px;
            height: 50px;
        }

    /* Label for each menu item */
    .menu-item-label {
        margin-top: 10px;
        font-size: 1.2em;
        color: green;
    }

    .client {
        text-align: center;
        margin: 20px 0;
    }

        .client h1 {
            margin-bottom: 40px;
            color: #ff6347; /* Tomato color */
        }

    .card {
        margin: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .card img {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

    .card-body {
        padding: 20px;
    }

    .card p {
        font-size: 1em;
        color: #333;
    }

    .card-footer {
        background-color: #f8f9fa;
        border-top: 1px solid #ddd;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        padding: 10px;
        font-style: italic;
    }

    /* Social media icons */
    .social-media {
        text-align: center;
        margin: 20px 0;
    }

        .social-media a {
            margin: 0 10px;
            color: #333;
            font-size: 1.5em;
        }

    /* Footer */
    .footer {
        background-color: #f8f9fa;
        padding: 20px;
        text-align: center;
        border-top: 1px solid #ddd;
    }

        .footer p {
            margin: 0;
            color: #333;
        }
</style>
<div class="text-center">
    <h1 class="display-4" style="color: #ff6347;">Welcome to Jumbo Juice</h1>
    <p>
    <a href="https://www.instagram.com/">Instagram></a>
    <a href="https://www.facebook.com/">Facebook></a></p>
</div>
@*Automatically Carousel*@
<div id="carouselExampleIndicators" class="carousel slide carousel-dark" data-bs-ride="carousel" data-bs-interval="2000">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/Peach.png" class="d-block w-100" alt="Peaches">
            <div class="carousel-caption d-none d-md-block">
                <h5>Peach Juice</h5>
                <p>Indulge in the velvety sweetness of our Peach Paradise – a sip of pure bliss in every glass!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/Mango.png" class="d-block w-100" alt="Mango">
            <div class="carousel-caption d-none d-md-block">
                <h5>Mango Juice</h5>
                <p>Experience the tropical delight of our Mango Magic – where every sip is a burst of sunshine!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/Strawberry.png" class="d-block w-100" alt="Strawberry">
            <div class="carousel-caption d-none d-md-block">
                <h5>Strawberry Juice</h5>
                <p>Delight in the berrylicious burst of our Strawberry Sensation – where every sip is a taste of summer!</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" data-bs-target="#carouselExampleIndicators" type="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" data-bs-target="#carouselExampleIndicators" type="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </button>
</div>

<!-- Main content container -->
