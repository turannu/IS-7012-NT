@page
@model AgainTrial.Pages.ShoppingCarts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ShoppingCart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShoppingCart.ShoppingCartId" />
            <div class="form-group">
                <label asp-for="ShoppingCart.CustomerId" class="control-label"></label>
                <select asp-for="ShoppingCart.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="ShoppingCart.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShoppingCart.OrderId" class="control-label"></label>
                <select asp-for="ShoppingCart.OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
                <span asp-validation-for="ShoppingCart.OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
