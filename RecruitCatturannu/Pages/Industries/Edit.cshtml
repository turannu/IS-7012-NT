@page
@model recruitcatturannu.Pages.Industries.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Industry Info</h1>

<h4>Industry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Industry.Id" />
            <div class="form-group">
                <label asp-for="Industry.IndustryName" class="control-label"></label>
                <input asp-for="Industry.IndustryName" class="form-control" />
                <span asp-validation-for="Industry.IndustryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Industry.Sector" class="control-label"></label>
                <input asp-for="Industry.Sector" class="form-control" />
                <span asp-validation-for="Industry.Sector" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Industry.Description" class="control-label"></label>
                <textarea asp-for="Industry.Description" class="form-control" ></textarea>
                <span asp-validation-for="Industry.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
