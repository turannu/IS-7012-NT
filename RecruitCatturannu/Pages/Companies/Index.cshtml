@page
@model recruitcatturannu.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Companies</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MinSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MaxSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].StartDate)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Current_PositionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyOfficeLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Industry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Revenue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Website)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].NumberOfEmployees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Current_PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyOfficeLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry.IndustryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Revenue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfEmployees)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CompanyID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CompanyID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CompanyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
