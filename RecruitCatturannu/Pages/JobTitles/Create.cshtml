@page
@model recruitcatturannu.Pages.JobTitles.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a  new Job Title</h1>

<h4>JobTitle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JobTitle.Title" class="control-label"></label>
                <input asp-for="JobTitle.Title" class="form-control" />
                <span asp-validation-for="JobTitle.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle.Description" class="control-label"></label>
                <textarea asp-for="JobTitle.Description" class="form-control" ></textarea>                      
                <span asp-validation-for="JobTitle.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle.MinSalary" class="control-label"></label>
                <input asp-for="JobTitle.MinSalary" class="form-control" />
                <span asp-validation-for="JobTitle.MinSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle.MaxSalary" class="control-label"></label>
                <input asp-for="JobTitle.MaxSalary" class="form-control" />
                <span asp-validation-for="JobTitle.MaxSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
