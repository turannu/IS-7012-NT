@page
@model recruitcatturannu.Pages.JobTitles.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details of Job Title</h1>

<div>
    <h4>JobTitle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.MinSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.MinSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.MaxSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.MaxSalary)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle.Candidates[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle.Candidates[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle.Candidates[0].DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle.Candidates[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle.Candidates[0].TargetSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle.Candidates[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle.Candidates[0].JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle.Candidates[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle.Candidates[0].Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle.Candidates[0].Industry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle.Candidates[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle.Candidates[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle.Candidates[0].LinkedInProfile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.JobTitle.Candidates)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TargetSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Experience)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Industry.IndustryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LinkedInProfile)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CandidateId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.CandidateId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.CandidateId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.JobTitle.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
